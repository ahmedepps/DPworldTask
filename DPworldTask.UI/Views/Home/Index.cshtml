@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Data;
@model DataTable
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link rel="stylesheet" href="~/css/Table.css">
    <link rel="stylesheet" href="~/css/site.css">

    <title>CSV Data Grid</title>
</head>
<body style="text-align: center">

    <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">

        <div class="center">
            <div class="offset-lg-3 col-lg-6">
                <div class="form-group">
                    <h4 style="left: 50%;">CSV Data Grid</h4>

                    <input type="file" name="postedFile" accept=".csv"/>
                    <input type="submit" value="Import" class="button" />

                </div>
            </div>
        </div>


    </form>

    @if (Model != null)
    {
        <div class="downcenter" align="center">

            <div class="offset-lg-3 col-lg-6">
                <div class="form-group">
                    <input type="submit" onclick="location.href='@Url.Action("Export", "Home")'" value="Export" class="button" /><br>

                    <table>
                        <thead>

                            <tr>
                                @foreach (DataColumn dc in Model.Columns)
                                {
                                    <th>@dc.ColumnName</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    @foreach (DataColumn dc in Model.Columns)
                                    {
                                        <td>@dr[dc.ColumnName]</td>
                                    }
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }



</body>

</html>



